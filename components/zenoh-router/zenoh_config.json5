{
  plugins: {
    rest: {                        // activate and configure the REST plugin
      http_port: 8000              // with HTTP server listening on port 8000
    },
    storage_manager: {             // activate and configure the storage_manager plugin
      storages: {
        "colmena_service_definitions": {  // Configure storage for colmena_service_definitions
          "key_expr": "colmena_service_definitions/**",  // Listen to the key expression "colmena_service_definitions/**"
          "volume": {  // Use the default "memory" volume
            "id": "memory"
          }
        },
        "colmena_context_definitions": {  // Configure storage for colmena_context_definitions
          "key_expr": "dockerContextDefinitions/**",  // Listen to the key expression "dockerContextDefinitions/**"
          "volume": {  // Use the default "memory" volume
            "id": "memory"
          }
        }
      }
    }
  }
}